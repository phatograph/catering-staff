<div class="page-header">
  <h2>Waiter <%= @waiter.full_name %></h2>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Skills</h3>
  </div>
  <div class="panel-body">
    <% if @waiter.waiter_skills.all.empty? %>
      <div class="alert alert-warning text-center">
        No records yet.
      </div>
    <% else %>
      <table class="table table-striped">
        <% @waiter.waiter_skills.each do |ws| %>
          <% if ws.persisted? %>
            <tr>
              <td style="width: 50px;">
                <%= link_to remove_skill_waiter_path(@waiter, ws.id.to_i), :method => :patch, :data => {:confirm => 'Are you sure?' } do %>
                  <span class="label label-danger">
                    <i class="fa fa-trash-o"></i>
                  </span>
                <% end %>
              </td>
              <td>
                <%= ws.title %>
              </td>
            </tr>
          <% end %>
        <% end %>
      </table>
    <% end %>
    <% if @waiter.remaining_skills.any? %>
      <div style="padding-top: 10px">
        <%= form_for [:add_skill, @waiter], :html => {:class => 'form-inline' } do |f| %>
          <div class="form-group">
            <label>Add skill</label>
            <%= f.select :waiter_skills, @waiter.remaining_skills.collect { |x| [ x.title, x.id ] }, {}, {:class => 'form-control' } %>
          </div>
          <div class="form-group">
            <%= f.submit 'Add', :class => 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
